@model BlogDashboard;

@{
    ViewData["Title"] = "Index";
}

<div>
    <img src="~/AdminLTE3/dist/img/avatar3.png" alt="Alternate Text" />
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>

<b>Data Blog</b>


<table class="table" id="tb-datatable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(item => item.blog[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(item => item.blog[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(item => item.blog[0].CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(item => item.blog[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(item => item.blog[0].User.Name)
            </th>
            <th>Aksi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.blog)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Username)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <img src="~/AdminLTE3/dist/img/avatar2.png" alt="Alternate Text" />
</div>

@await Html.PartialAsync("Partial/ListUser.cshtml")

<div>
    <img src="~/AdminLTE3/dist/img/avatar.png" alt="Alternate Text" />
</div>

@await Html.PartialAsync("Partial/ListRoles.cshtml")

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tb-datatable').DataTable(
                {
                    dom: 'Bfrtip',
                    buttons: [
                        'print',
                    ]
                }
            );
        });
    </script>
}
