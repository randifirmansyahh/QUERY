@model IEnumerable<Blog>

<a asp-action="Buat">Buat Blog baru</a>

<br />

@if (Model.Count() == 0)
{
    <h1>Belum ada data :) </h1>
}
else
{
    foreach (var item in Model)
    {
        @item.Id
        <a asp-action="cari" asp-route-id="@item.Id">Detail</a>
        <a asp-action="ubah" asp-route-id="@item.Id">Ubah</a>
        <a asp-action="hapus" asp-route-id="@item.Id">Hapus</a>
        <br />
    }
}
