@model IEnumerable<Blog>

@if (Model.Count() == 0)
{
    <h1>Belum ada data :) </h1>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Judul
                </th>
                <th>
                    Penulis
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.Name)
                    </td>
                    <td>
                        <a asp-action="detail" asp-route-id="@item.Id" class="bi bi-search">
                            Detail
                        </a>

                        &nbsp;

                        <a asp-action="ubah" asp-route-id="@item.Id" class="bi bi-pencil"
                           style="color:forestgreen">
                            Ubah
                        </a>

                        &nbsp;

                        <a asp-action="hapus" asp-route-id="@item.Id"
                           class="bi bi-trash" title="Keluar" style="color:red"
                           onclick="if (! confirm('Yakin akan menghapus blog ini ?')) { return false; }">
                            Hapus
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <br />
}