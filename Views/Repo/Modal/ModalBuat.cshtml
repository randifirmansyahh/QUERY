@* MODAL *@

<div class="container">
    <!-- Tombol untuk menampilkan modal-->
    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal">Buat</button>

    <!-- Modal -->
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- konten modal-->
            <div class="modal-content">
                <!-- heading modal -->
                <div class="modal-header">
                    @*<button type="button" class="close text-danger" data-dismiss="modal">&times;</button>*@
                </div>

                <!-- body modal -->
                <div class="modal-body">
                    <form asp-action="buat" asp-controller="repo">
                        @await Html.PartialAsync("../Buat.cshtml")
                    </form>
                </div>

                <!-- footer modal -->
                <div class="modal-footer">
                    <p>Go-Blogs</p>
                </div>
            </div>
        </div>
    </div>
</div>